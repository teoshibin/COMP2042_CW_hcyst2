<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="optionPane" prefHeight="720.0" prefWidth="540.0" styleClass="black-container" stylesheets="@../style/standard.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tsb.frogger.controller.OptionController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="65.0" layoutY="176.0" prefHeight="369.0" prefWidth="411.0">
         <children>
            <Label prefHeight="43.0" prefWidth="69.0" text="Option">
               <styleClass>
                  <String fx:value="main-font" />
                  <String fx:value="font-weight-bold" />
               </styleClass>
            </Label>
            <VBox alignment="CENTER" prefHeight="256.0" prefWidth="411.0">
               <children>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="138.0" prefHeight="40.0" prefWidth="411.0">
                     <children>
                        <Label prefHeight="32.0" prefWidth="165.0" styleClass="main-font" text="Master Volume" />
                        <Slider fx:id="masterVolumeSlider" onMouseReleased="#handleOnRelease" prefHeight="14.0" prefWidth="205.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="411.0">
                     <children>
                        <Label prefHeight="32.0" prefWidth="165.0" styleClass="main-font" text="Music Volume" />
                        <Slider fx:id="musicVolumeSlider" onMouseReleased="#handleOnRelease" prefHeight="14.0" prefWidth="205.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="411.0">
                     <children>
                        <Label prefHeight="32.0" prefWidth="165.0" styleClass="main-font" text="Control Volume" />
                        <Slider fx:id="controlVolumeSlider" onMouseReleased="#handleOnRelease" prefHeight="14.0" prefWidth="205.0" />
                     </children>
                  </HBox>
               </children></VBox>
            <Button fx:id="backBtn" mnemonicParsing="false" onAction="#handleBtnAction" onMouseEntered="#enterBtn" text="Back">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="main-font" />
               </styleClass>
            </Button>
         </children>
         <styleClass>
            <String fx:value="opaque-container" />
            <String fx:value="container-border" />
         </styleClass>
      </VBox>
   </children>
</AnchorPane>
